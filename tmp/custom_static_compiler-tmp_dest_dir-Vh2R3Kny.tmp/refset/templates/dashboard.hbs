<div class="col-md-3 dashboard-sidebar">
     <h2>Useful Tools</h2>
    <ul>
    <li>{{#link-to 'refsets' (query-params showUnpublished="0" showInactive="0")}}Browse Refsets{{/link-to}}</li>
						{{#if user.token}} 
        <li> {{#link-to 'refsets.new'}}  New Refset{{/link-to}}</li>
        {{/if}}
        </ul>
 	{{#if user.token}}
					<li><a href="#" {{action 'logout'}}>Logout</a></li>
				{{else}}
					<li><a href="#" {{action 'showRegistrationForm'}}>Register</a></li>
					<li><a href="#" {{action 'showLoginForm'}}>Login</a></li>
				{{/if}}
</div>
<div class="col-md-9 dashboard-news">
    <h1>Latest Refset Tool News</h1>
<ul class="list-group refset-list">
	{{#each news}}
		<li>
			<span class="right">{{date-format published}}</span>
			<h4>{{title}}</h4>
			<p>{{{description}}}</p>
		</li>
	{{/each}}
</ul>
    
</div>

    